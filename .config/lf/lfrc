map gb cd /media/backup/
map ge cd /media/hard/
map gd cd /media/dev/
map gm cd /media
map g/ cd /


# toggle single column view
cmd no_preview :{{
    set nopreview
    set ratios 1
    set info size:time
    map ~ yes_preview
}}
cmd yes_preview :{{
    set ratios 1:2:3
    set preview
    set info
    map ~ no_preview
}}
map ~ no_preview
map . set hidden!

map W &(st;cd $(dirname $f))
map Y &(echo $f | xclip -selection c)

cmd trash %trash-put $fx
map x delete
map X trash


cmd extract ${{
    case "$f" in
        *.zip) unzip "$f" ;;
        *.tar.*) tar -xf "$f" ;;
        *.rar) unrar x "$f" ;;
        *.7z) 7z x "$f" ;;
    esac
}}
