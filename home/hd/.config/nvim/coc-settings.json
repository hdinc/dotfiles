{
    "clangd.semanticHighlighting": true,
    "clangd.arguments": ["--background-index","-header-insertion=never"],
    "coc.preferences.formatOnSaveFiletypes": ["cpp","c"],

    "languageserver": {
      "haskell": {
        "command": "haskell-language-server-wrapper",
        "args": ["--lsp"],
        "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
        "filetypes": ["haskell", "lhaskell"]
      }
    },

    "codeLens.enable": true,

    "diagnostic.virtualText": true,
    "diagnostic.virtualTextCurrentLineOnly": false,
    "diagnostic.enableSign": false,

    "suggest.floatEnable": false,
    "suggest.detailMaxLength": 20,
    "suggest.labelMaxLength": 60,
    "suggest.disableMenu": true,
    "suggest.disableKind": true,

    "list.previewSplitRight": true,
    "coc.preferences.jumpCommand": "edit",

    "coc.preferences.currentFunctionSymbolAutoUpdate": true
}
